LogLevel VERBOSE

PermitRootLogin no

PubkeyAuthentication yes
AuthorizedKeysFile .ssh/authorized_keys
PasswordAuthentication no

# Disable almost every service globally
AllowAgentForwarding no
AllowTcpForwarding no
GatewayPorts no
X11Forwarding no
PermitTunnel no
PermitListen none
PermitOpen none
PermitTTY no
ForceCommand echo "This SSH server can only be used for remote port forwarding"

# Don't look up the remote host name. This usually results in faster connection
# times
UseDNS no

Include /etc/ssh/sshd_config_users
